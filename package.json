{
   "private": true,
   "license": "MIT",
   "workspaces": [
      "core",
      "cli",
      "demo"
   ],
   "devDependencies": {
      "npm-run-all": "^4.1.5",
      "typescript": "^3.8.3"
   },
   "scripts": {
      "ws:core": "yarn workspace @mint2d/core",
      "ws:cli": "yarn workspace @mint2d/cli",
      "ws:demo": "yarn workspace @mint2d/demo",
      "build": "run-s build:*",
      "build:serve": "run-s build:serve:*",
      "build:serve:core": "yarn ws:core build",
      "build:cli": "yarn ws:cli build",
      "build:demo": "yarn ws:demo build",
      "serve": "npm-run-all -s build:serve:* -p serve:*",
      "serve:core": "yarn ws:core serve",
      "serve:demo": "yarn ws:demo serve"
   }
}
